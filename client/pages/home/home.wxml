    <image class='product-image' src='{{productList[1].image}}' mode='widthFix'></image>
    <view class='product-name'>{{productList[1].name}}</view>
    <view class='product-meta'>
      <view class='product-money'>￥</view>
      <view class='product-price'>{{productList[1].price}}</view>
